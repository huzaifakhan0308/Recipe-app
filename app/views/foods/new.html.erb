<%= form_with model: Food.new, url: foods_path(current_user), method: :post, local: true do |form| %>

  <div class="field">
    <%= form.label :name, style: "display: block"  %>
    <%= form.text_field :name, required: true, class:"input"  %>
  </div>

  <div class="field">
      <%= form.label :measurement_unit, style: "display: block", class: "label"  %>
      <%= form.select :measurement_unit, ['kg', 'g', 'lb', 'oz'], required: true, class:"input"  %>
  </div>

  <div class="field">
    <%= form.label :quantity, style: "display: block", class: "label"  %>
    <%= form.number_field :quantity, required: true, class:"input"  %>
  </div>

  <div class="field">
    <%= form.label :price, style: "display: block", class: "label" %>
    <%= form.number_field :price, required: true, class:"input"  %>
  </div>

  <div>
  <%= form.submit "Create food", class: "btn-submit" %>
  </div>
<% end %>

